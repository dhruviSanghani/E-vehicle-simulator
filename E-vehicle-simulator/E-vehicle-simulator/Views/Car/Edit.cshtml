@model E_vehicle_simulator.Models.EvCarModel

@{
    ViewData["Title"] = "Edit Vehicle";
}

<div class="container h-100 d-flex align-items-center justify-content-center" id="contentBox">
    <div class="row col-12 align-items-center">
        <h1>Edit @Model.CarModelName's Details</h1>
        <hr />
        <div class="row">
            <form asp-controller="Car" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row row">
                    <div class="form-group col-md-6">
                        <input asp-for="CarId" class="form-control" style="display:none" />
                        <label asp-for="CarModelName" class="control-label"></label>
                        <input asp-for="CarModelName" class="form-control" />
                        <span asp-validation-for="CarModelName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="CarModelNo" class="control-label"></label>
                        <input asp-for="CarModelNo" class="form-control" />
                        <span asp-validation-for="CarModelNo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="form-group col-md-4">
                        <label asp-for="CarCompany" class="control-label"></label>
                        <input asp-for="CarCompany" class="form-control" />
                        <span asp-validation-for="CarCompany" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="MaxCharge" class="control-label"></label>
                        <input asp-for="MaxCharge" class="form-control" />
                        <span asp-validation-for="MaxCharge" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="PeakPower" class="control-label"></label>
                        <input asp-for="PeakPower" class="form-control" />
                        <span asp-validation-for="PeakPower" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="form-group col-md-6">
                        <label asp-for="EvBrandID" class="control-label"></label>
                        <select asp-for="EvBrandID" asp-items="ViewBag.EVBrandId" class="form-control">
                           
                        </select> 
                        <span asp-validation-for="EvBrandID" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ChargingTypeID" class="control-label"></label>
                        <select asp-for="ChargingTypeID" asp-items="ViewBag.CTypeId" class="form-control">
                           
                        </select> 
                        <span asp-validation-for="ChargingTypeID" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="form-group col-md-6">
                        <label asp-for="EnergyConsumption" class="control-label"></label>
                        <input asp-for="EnergyConsumption" class="form-control" />
                        <span asp-validation-for="EnergyConsumption" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ChargingCurve" class="control-label"></label>
                        <input asp-for="ChargingCurve" class="form-control" />
                        <span asp-validation-for="ChargingCurve" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row row">
                    <div class="form-group form-check col-md-4">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAutoPilot" /> @Html.DisplayNameFor(model => model.IsAutoPilot)
                        </label>
                    </div>
                    <div class="form-group form-check col-md-4">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAutoShift" /> @Html.DisplayNameFor(model => model.IsAutoShift)
                        </label>
                    </div>                    
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-success" style="float:left;margin:10px 0px" />
                    <a asp-action="Index" class="btn btn-outline-success" style="float:right">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
