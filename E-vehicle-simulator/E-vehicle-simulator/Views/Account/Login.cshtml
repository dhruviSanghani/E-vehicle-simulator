@model E_vehicle_simulator.Models.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container h-100 d-flex align-items-center justify-content-center" style="margin:10% auto" id="loginbox">
    <div class="row col-12 align-items-center">
        <div class="col-6">
            <img src="~/Logo.png" class="img-responsive" width="50%" />
        </div>
        <div class="col-6">
            <form asp-controller="Account" asp-action="Login">
                <div class="text-danger" id="summary">@ViewData["message"]?.ToString()</div>

                <div class="form-group">
                     <label asp-for="UserName" class="form-label"></label>
                    <div class="input-group mb-3">                       
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><img src="~/user.png" width="25px" /> </span>
                        </div>
                        <input type="text" class="form-control" asp-for="UserName" aria-label="Username" aria-describedby="basic-addon1">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group mb-3">                       
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon2"><img src="~/password.png" width="25px" /> </span>
                        </div>
                        <input type="password" class="form-control" asp-for="Password" aria-label="Password" aria-describedby="basic-addon2">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group" style="margin-top:10px">
                    <input type="submit" value="Login" class="btn btn-login btn-lg btn-block" />
                </div>
            </form>
        </div>

    </div>
</div>

